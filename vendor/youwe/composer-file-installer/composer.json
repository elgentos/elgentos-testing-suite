{
    "name": "youwe/composer-file-installer",
    "description": "Install files with Composer.",
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Youwe B.V.",
            "email": "info@youweagency.com"
        },
        {
            "name": "Jan-Marten de Boer",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "youwe/file-mapping": "~1.1.0"
    },
    "require-dev": {
        "composer/composer": "@stable",
        "kint-php/kint": "@stable",
        "mikey179/vfsstream": "@stable",
        "phpunit/phpunit": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Youwe\\Composer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Youwe\\Composer\\Tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "tests",
            "phpunit.xml",
            ".gitignore"
        ]
    }
}
